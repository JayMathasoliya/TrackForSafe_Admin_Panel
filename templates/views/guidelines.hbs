            </div> --}}

            {{!-- <div class="user">
                <img src="/images/customer01.jpg" alt="">
            </div> --}}
        </div>

        <h1>Admin Panel - Guidelines</h1>
        <form action="/guidelines" method="POST">
            {{#if successMessage}}
            <div id="success-message" class="success-message">
                {{successMessage}}
            </div>
            {{/if}}

            {{#if errorMessage}}
            <div id="error-message" class="error-message">
                {{errorMessage}}
            </div>
            {{/if}}

            <div class="guideBox">
                <label for="guidelines">Enter Guidelines:</label>
                <textarea id="guidelines" name="guidelines" rows="6" cols="50"></textarea>
                <input type="submit" value="Submit" class="button" />
            </div>
        </form>
    </div>

    <script src="/js/sidebarScript.js"></script>
    <script src="/js/guidelinesScript.js"></script>

